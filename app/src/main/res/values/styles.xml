<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppThemeLast" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FEFEFE</item>
        <item name="colorPrimaryDark">@color/red_app</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppThemeActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FEFEFE</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeActionBarPop" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FEFEFE</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <item name="colorButtonNormal" type="drawable">@color/md_red_700</item>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>


    <style name="MyButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="android:theme">@style/GreenButtonThemeOverlay</item>
    </style>

    <style name="MyButtonStyleRed"
        parent="Widget.MaterialComponents.Button">
        <item name="android:theme">@style/RedButtonThemeOverlay</item>
    </style>

    <style name="MyButtonStyleBlue"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/BlueButtonThemeOverlay</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <!-- For filled buttons, your theme's colorPrimary provides the default background color of the component -->
        <item name="colorPrimary">@color/colorLogin</item>
        <item name="android:shape">@drawable/rounded_shape</item>
    </style>

    <style name="BlueButtonThemeOverlay">
        <item name="colorPrimary">#416BC1</item>
        <item name="android:background">@drawable/facebook_shape</item>
    </style>

    <style name="RedButtonThemeOverlay">
        <item name="colorPrimary">@color/md_red_800</item>
    </style>

    <style name="MyButtonStyleText"
        parent="Widget.MaterialComponents.Button.TextButton">
    </style>
    <style name="HeaderBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Line divider horizontal-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/md_black_1000_20</item>
    </style>

    <!--Line divider horizontal bold-->
    <style name="DividerBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/md_black_1000</item>
    </style>

    <!--Line divider vertical-->
    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/md_black_1000</item>
    </style>

    <style name="CustomFontFamily">
        <item name="android:fontFamily">@font/neue_kabel</item>
    </style>

    <style name="CustomFontFamilyBold">
        <item name="android:fontFamily">@font/neue_kabel_bold</item>
    </style>

    <style name="appTheme.MaterialButtonRounded" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomTheme" parent="AppTheme">
        <item name="android:radioButtonStyle">@style/RadioButton</item>
    </style>
    <style name="RadioButton" parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorPrimary">@color/md_black_1000</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/yellow_app</item>
    </style>

    <style name="MyDialogThemeMaterialLight" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/yellow_app</item>
        <item name="editTextColor">@color/white</item>
    </style>

    <style name="MyDialogThemeMaterial" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/yellow_app</item>
        <item name="editTextColor">@color/white</item>
    </style>
    <style name="MyTimePickerDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/yellow_app</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorBackgroundFloating">@color/red_app</item>
        <item name="android:textColor">@color/red_app</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button.MyButtonToggle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="strokeColor">@color/md_btn_stroke_selector</item>
        <item name="strokeWidth">@dimen/md_btn_stroke_size</item>
        <item name="android:textColor">@color/md_btn_text_color_selector</item>
        <item name="backgroundTint">@color/md_btn_bg_color_selector</item>
        <item name="rippleColor">@color/md_btn_ripple_color_selector</item>
    </style>
</resources>
