<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/track_order"
            android:fontFamily="@font/neue_kabel_bold"
            android:textColor="#000"
            android:textSize="19sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"/>
        <TableLayout
            android:id="@+id/tbLOrderTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="4"
            android:layout_marginTop="@dimen/standard_divider"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/simpleTextView0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/neue_kabel_bold"
                android:padding="0dp"
                android:textColor="#000"
                android:textSize="19sp"
                android:text="CÃ“DIGO"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/simpleTextView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/neue_kabel_bold"
                android:gravity="center"
                android:padding="0dp"
                android:text="HORA"
                android:textColor="#000"
                android:textSize="19sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/simpleTextView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/neue_kabel_bold"
                android:gravity="center"
                android:padding="0dp"
                android:text="TOTAL"
                android:textColor="#000"
                android:textSize="19sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/simpleTextView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/neue_kabel_bold"
                android:gravity="center"
                android:padding="0dp"
                android:text="ESTADO"
                android:textColor="#000"
                android:textSize="19sp"
                android:textAlignment="center"/>
        </TableRow>
        </TableLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTrackOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            />
    </LinearLayout>

</RelativeLayout>